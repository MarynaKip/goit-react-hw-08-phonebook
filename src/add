//App.js

// user/index.js

onGetUserSuccess

onGetUserRequest:(state) => {
state.isLoading = true; }


onGetUserFailure:(state) => {
state.isLoggedOn = false;
state.isLoading = false;
state.token = '';
}

// user/operations.js


export const getCurrentUser = () => (dispatch, getState) => {
dispatch(onGetUserRequest())

axios
    .get("/current")
    .then(({ data }) => dispatch(actions.onGetUserSuccess(data)))
    .catch((error) => dispatch(actions.onGetUserFailure(error)));
}
